extends ../layouts/master

block title
    title Login

block content
    h1 List Product
    span Page #{page}
    .row
        each product in products
            .col-md-3
                .card(style='width: 18rem;')
                    //- img.card-img-top(src=product.image , alt='Card image cap')
                    .card-body                    
                        h5.card-title #{product.name}
                        //- p.card-text #{product.description}
                        a.btn.btn-primary(href='cart/add/' + product.id) Buy

        //- nav(aria-label='...')
            ul.pagination

                if page === 1
                    li.page-item.disabled
                        span.page-link Previous
                else
                    li.page-item
                        a.page-link(href='/product?page='+ (page - 1)) Previous
                
                if page-1 !== 1 && page !== 1
                    li.page-item
                        a.page-link(href='/product?page=1') 1

                    li.page-item.disabled
                        span.page-link ...

                if page !== 1
                    li.page-item
                        a.page-link(href='/product?page='+ (page - 1))= page - 1

                li.page-item.active
                    a.page-link(href='/product?page='+ page)= page
                
                if page !== pages
                    li.page-item
                        a.page-link(href='/product?page='+ (page + 1))= page + 1
                
                if page+1 !== pages && page !== pages
                    li.page-item.disabled
                        span.page-link ...

                    li.page-item
                        a.page-link(href='/product?page=' + pages)= pages

                if page === pages
                    li.page-item.disabled
                        span.page-link Next
                else
                    li.page-item
                        a.page-link(href='/product?page='+ (page + 1)) Next

