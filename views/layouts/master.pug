doctype
html(lang='en')
    head
        meta(charset='utf-8')
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")

        block title
    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
            a.navbar-brand(href='/') DTSang

            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/') Home
                    li.nav-item
                        a.nav-link(href='/user') User
                    li.nav-item
                        a.nav-link(href='/product') Product
                    li.nav-item
                        a.nav-link(href='/cart') Cart 
                            span (#{cart.totalQuantity})

                if author
                    ul.navbar-nav.my-2.my-lg-0
                        li.nav-item.active
                            a.nav-link(href='/auth') #{author.name}
                        li.nav-item
                            a.nav-link(href='/auth/logout') Logout
                else
                    ul.navbar-nav.my-2.my-lg-0
                        li.nav-item.active
                            a.nav-link(href='/auth/login') Login
                        li.nav-item
                            a.nav-link(href='#') Register



        .container
            block content