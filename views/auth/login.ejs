<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include ("../layouts/head") %>
        <title>Login</title>
    </head>

    <body>

        <header>
            <%- include ("../layouts/header") %>
        </header>

        <section>
            <div class="jumbotron jumbotron-fluid">
                <div class="container">
                    <h1 class="display-4 text-center">Login </h1>
                    <form method="POST" action="/auth/login">
                        <input type="hidden" name="_csrf" />
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input class="form-control" id="exampleInputEmail1" type="email" name="email" placeholder="Enter email" /><small class="form-text text-muted">
                        </div>
                        
                        <div class="form-group">
                          <label for="exampleInputPassword1">Password</label>
                          <input class="form-control" id="exampleInputPassword1" type="password" name="password" placeholder="Password" />
                        </div>
                        
                        <div class="form-group form-check">
                          <input class="form-check-input" id="exampleCheck1" type="checkbox" />
                          <label class="form-check-label" for="exampleCheck1">Check me out</label>
                        </div>
                        
                        <button class="btn btn-primary" type="submit">Login</button>
                    </form>
                </div>
            </div>
        </section>
        
        <footer>
            <%- include ("../layouts/footed") %>
        </footer>

    </body>

</html>